<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%include ./common/css.ejs %>
  </head>
  <body>
    <%include ./common/header.ejs %>
    <div class="container">
    	<div class="row">
    		<!-- <div class="page-header">
    			<h1><%= title %></h1>
    			<small>重度科幻迷</small>
    		</div> -->
    		<% movies.forEach(function(item) { %>
	    		<div class="col-md-2">
	    			<div class="thumbnail">
                        <a href="/movie/<%=item._id%>">
                            <img src="<%=item.poster%>" alt="<%=item.title%>">
                        </a>
                        <div class="caption">
                            <h3><%=item.title%></h3>
                            <p>
                                <a href="/movie/<%=item._id%>" class="btn btn-primary" role="button">
                                    观看预告片
                                </a>
                            </p>
                        </div>
                    </div>

	    		</div>
    		<% }) %>
    	</div>
    </div>


    <%include ./common/script.ejs %>
  </body>
</html>
